<body>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.05)), url(<%= asset_path("top.jpg") %>)">
    <div class="top-title">
      <h1>Cookbook</h1>
      <h3>All Your Favorite Recipes in One Place</h3>
    </div>
  </div>

  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Categories</h2>
      <%= link_to "Create new category", new_category_path, class: "btn_01"  %>
    </div>

 <div class="cards">
  <% @categories.each do |category| %>
    <% if category.photo.attached? %>
      <% image_url = cl_image_path(category.photo.key, height: 300, crop: :fill) %>
    <% else %>
      <% image_url = "https://via.placeholder.com/300x200?text=No+Image" %>
    <% end %>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_url %>');">
       <div class ="text-white"> <%= link_to category.name, category_path(category), class: "card-link" %></div>
        <%# <%= link_to 'Delete', category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: "card-delete" %>
    </div>
  <% end %>
</div>

  </div>
</body>
