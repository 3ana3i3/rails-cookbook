<h1>Categories</h1>
<% @categories.each do |category| %>
  <li>
    <%= link_to category.name, category_path(category) %>
    <%= link_to 'Delete', category_path(category), data: { turbo_method: :delete, confirm: "Are you sure?" } %>
  </li>
<% end %>
<%= link_to "Create new category", new_category_path %>
